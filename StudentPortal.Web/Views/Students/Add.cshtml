@{
    ViewData["Title"] = "Add Student";
}
@model StudentPortal.Web.Models.AddStudentViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-light">
                <div class="card-header text-center bg-primary text-white">
                    <h3>Add Student</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="mt-3">
                            <label class="form-label" for="Name">Name</label>
                            <input type="text" id="Name" class="form-control" asp-for="Name" placeholder="Enter student name" />
                            <span asp-validation-for="Name" class="text-danger"></span> <!-- Validation message for Name -->
                        </div>
                        <div class="mt-3">
                            <label class="form-label" for="Email">Email</label>
                            <input type="email" id="Email" class="form-control" asp-for="Email" placeholder="Enter student email" />
                            <span asp-validation-for="Email" class="text-danger"></span> <!-- Validation message for Email -->
                        </div>
                        <div class="mt-3">
                            <label class="form-label" for="Phone">Phone</label>
                            <input type="text" id="Phone" class="form-control" asp-for="Phone" placeholder="Enter student phone number" />
                            <span asp-validation-for="Phone" class="text-danger"></span> <!-- Validation message for Phone -->
                        </div>
                        <div class="mt-3">
                            <div class="form-check">
                                <input type="checkbox" id="Subscribed" class="form-check-input" asp-for="Subscribed" />
                                <label class="form-check-label" for="Subscribed">Subscribed</label>
                            </div>
                        </div>
                        <div class="mt-4 text-center">
                            <button type="submit" class="btn btn-primary w-100 py-2" style="transition: background-color 0.3s ease;">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add custom hover effect for button -->
<style>
    .btn-primary:hover {
        background-color: #0056b3;
        cursor: pointer;
    }

    .form-control:focus {
        border-color: #007bff;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
</style>

<!-- Add the Validation Script (Bootstrap will show validation feedback automatically) -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
